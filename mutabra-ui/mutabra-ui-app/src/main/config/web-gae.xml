<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
		 xmlns="http://java.sun.com/xml/ns/j2ee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<context-param>
		<param-name>tapestry.app-package</param-name>
		<param-value>com.mutabra.web</param-value>
	</context-param>

	<context-param>
		<param-name>tapestry.application-version</param-name>
		<param-value>${project.version}</param-value>
	</context-param>

	<context-param>
		<param-name>tapestry.production-mode</param-name>
		<param-value>${project.production.mode}</param-value>
	</context-param>


	<context-param>
		<param-name>mail.admin-address</param-name>
		<param-value>${mail.admin.address}</param-value>
	</context-param>

	<context-param>
		<param-name>twitter.consumer-key</param-name>
		<param-value>${twitter.consumer.key}</param-value>
	</context-param>

	<context-param>
		<param-name>twitter.consumer-secret</param-name>
		<param-value>${twitter.consumer.secret}</param-value>
	</context-param>

	<context-param>
		<param-name>facebook.app-id</param-name>
		<param-value>${facebook.app.id}</param-value>
	</context-param>

	<context-param>
		<param-name>facebook.app-secret</param-name>
		<param-value>${facebook.app.secret}</param-value>
	</context-param>

	<context-param>
		<param-name>google.consumer-key</param-name>
		<param-value>${google.consumer.key}</param-value>
	</context-param>

	<context-param>
		<param-name>google.consumer-secret</param-name>
		<param-value>${google.consumer.secret}</param-value>
	</context-param>

	<context-param>
		<param-name>vkontakte.consumer-key</param-name>
		<param-value>${vkontakte.consumer.key}</param-value>
	</context-param>

	<context-param>
		<param-name>vkontakte.consumer-secret</param-name>
		<param-value>${vkontakte.consumer.secret}</param-value>
	</context-param>


	<filter>
		<filter-name>mutabra</filter-name>
		<filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>mutabra</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>ERROR</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
</web-app>
