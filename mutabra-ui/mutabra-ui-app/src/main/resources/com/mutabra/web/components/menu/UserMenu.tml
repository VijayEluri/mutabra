<t:container
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
		xmlns:p="tapestry:parameter">
	<t:button secondary="ui-icon-triangle-1-s">
		<a id="user-menu-button" href="#">${userName}</a>
	</t:button>
	<t:menu id="user-menu" class="sidebar" items="settings,signOut">
		<p:settingsMenuItem>
			<t:button>
				<t:pagelink page="account/settings">${message:button.account-settings.title}</t:pagelink>
			</t:button>
		</p:settingsMenuItem>
		<p:signOutMenuItem>
			<t:button>
				<t:eventlink event="signOut">${message:button.sign-out.title}</t:eventlink>
			</t:button>
		</p:signOutMenuItem>
	</t:menu>
	<t:button secondary="ui-icon-power" text="false">
		<t:eventlink event="signOut">${message:button.sign-out.title}</t:eventlink>
	</t:button>

<script type="text/javascript">
	j$(function() {
		j$("#user-menu-button").click(function() {
			var menu = j$("#user-menu");
			menu.toggle();
			setTimeout(function() {
				menu.hide();
			}, 3000)
		});
	});
</script>
</t:container>
