<html t:type="layout/default"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:p="tapestry:parameter">

<t:form>
	<div class="t-beaneditor-row">
		<t:game.raceselect value="value.race"/>
	</div>

	<div class="unit">
		<div class="column">
			<div class="t-beaneditor-row">
				<t:game.faceselect value="value.face"/>
			</div>
		</div>
		<div class="column">
			<div class="t-beaneditor-row">
				<t:label for="name"/>
				<t:textfield t:id="name" value="value.name" validate="required" label="message:label.name"/>
			</div>
			<div class="t-beaneditor-row">
				<t:label for="level"/>
				<t:textfield t:id="level" value="literal:newbie" disabled="true" label="message:label.level"/>
			</div>
		</div>
	</div>

	<t:menu class="toolbar" items="create,cancel">
		<p:createMenuItem>
			<t:button>
				<t:submit value="message:button.create"/>
			</t:button>
		</p:createMenuItem>
	</t:menu>
</t:form>

</html>
