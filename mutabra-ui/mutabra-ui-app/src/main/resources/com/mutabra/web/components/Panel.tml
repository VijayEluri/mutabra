<div class="container m-panel ${className}"
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

	<div class="container m-panel-header">
		<span>${title}</span>
	</div>
	<div class="container m-panel-body">
		<t:body/>
	</div>
	<div class="container m-panel-footer">
		<t:menu class="toolbar" items="prop:buttons" overrides="overrides"/>
	</div>
</div>