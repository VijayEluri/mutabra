<html t:type="layout/default"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:p="tapestry:parameter">

<t:grid source="source" row="row" include="name,email,lastLogin,registered" add="actions">
	<p:actionsCell>
		<t:eventlink event="edit" zone="entityDialog" context="row">${message:button.edit}</t:eventlink> |
		<t:eventlink event="delete" context="row">${message:button.delete}</t:eventlink>
	</p:actionsCell>
</t:grid>

<t:menu class="toolbar" items="add">
	<p:addMenuItem>
		<t:button primary="literal:ui-icon-circle-plus">
			<t:eventlink event="add" zone="entityDialog">${message:button.add}</t:eventlink>
		</t:button>
	</p:addMenuItem>
</t:menu>


<t:admin.accountDialog t:id="entityDialog"/>

</html>
