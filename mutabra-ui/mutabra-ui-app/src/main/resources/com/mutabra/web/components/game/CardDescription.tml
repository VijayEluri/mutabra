<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
			 xmlns:p="tapestry:parameter">

	<div id="${clientId}" class="description span4">
		<h4>${value:name}</h4>
		<br/>
		<t:image.cardimage card="value"  width="150" height="150"/>
		<br/>
		<i class="icon-skull"/>${value.power}
		<i class="icon-heart"/>${value.health}
		<i class="icon-blood"/>${value.bloodCost}
		<br/>
		<p>${value:description}</p>
	</div>

</t:container>
