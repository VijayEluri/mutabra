<t:container
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

	<div id="${clientId}" class="${containerClass}">
		<h4>${value.hero.name}</h4>
		<br/>
		<t:image.heroimage hero="value.hero" width="150" height="150"/>
		<br/>
		<i class="icon-heart"/>${value.health}
		<i class="icon-skull"/>${value.mentalPower}
	</div>

</t:container>
