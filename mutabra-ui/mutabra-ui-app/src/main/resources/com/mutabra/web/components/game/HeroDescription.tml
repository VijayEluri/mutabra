<t:container
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

	<div id="${clientId}" style="display:none;">
		<h4>${value.hero.name}</h4>
		<br/>
		<t:image.heroimage hero="value.hero" width="150" height="150"/>
		<br/>
		<span class="ui-icon ui-icon-heart"/><span class="icon-text">${value.health}</span>
		<span class="ui-icon ui-icon-skull"/><span class="icon-text">${value.mentalPower}</span>
	</div>

</t:container>
