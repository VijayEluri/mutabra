<t:container
		xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

	<div id="${clientId}" class="description">
		<h4>${value.card:name}</h4>
		<br/>
		<t:image.cardimage card="value.card" width="150" height="150"/>
		<br/>
		<i class="icon-heart"/>${value.health}
		<i class="icon-skull"/>${value.card.power}
		<br/>
		<p>${value.card:description}</p>
	</div>

</t:container>
