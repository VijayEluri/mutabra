<html t:type="layout" title="heroes-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<c:panel actions="create">
	<t:loop source="heroes" value="row">
		<c:box>
			<div class="column">
				<t:game.facedisplay face="row.face"/>
			</div>
			<div class="column">
				<div>${message:name-label}: ${row.name}</div>
				<div>${message:level-label}: ${row.level:description}</div>
				<div>${message:rating-label}: ${row.rating}</div>

				<div>${message:attack-label}: ${row.attack}</div>
				<div>${message:defence-label}: ${row.defence}</div>
			</div>
			<div class="column" style="float:right;">
				<c:menu context="prop:row" actions="enter,settings,delete"/>
			</div>
		</c:box>
	</t:loop>
</c:panel>

</html>
