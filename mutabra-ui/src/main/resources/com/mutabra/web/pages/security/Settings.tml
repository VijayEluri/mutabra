<html t:type="layout" title="settings-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<c:container align="center">
	<t:form t:id="changeEmailForm">
		<c:panel actions="change">
			<t:errors/>
			<table class="details">
				<tr>
					<th>
						<t:label for="email"/>
					</th>
					<td>
						<t:textfield t:id="email" value="email" validate="required"/>
					</td>
				</tr>
			</table>
			<p:changeMenuItem>
				<t:linksubmit event="changeEmail">${message:change-label}</t:linksubmit>
			</p:changeMenuItem>
		</c:panel>
	</t:form>

	<t:form t:id="changePasswordForm">
		<c:panel actions="change">
			<t:errors/>
			<table class="details">
				<tr>
					<th>
						<t:label for="password"/>
					</th>
					<td>
						<t:passwordfield t:id="password" value="password" validate="required"/>
					</td>
					<td>
						<t:passwordfield t:id="confirmPassword" value="confirmPassword" validate="required"/>
					</td>
				</tr>
			</table>
			<p:changeMenuItem>
				<t:linksubmit event="changePassword">${message:change-label}</t:linksubmit>
			</p:changeMenuItem>
		</c:panel>
	</t:form>

	<t:form t:id="changeInformationForm">
		<c:panel actions="change">
			<t:errors/>
			<table class="details">
				<tr>
					<th>
						<t:label for="name"/>
					</th>
					<td>
						<t:textfield t:id="name" value="account.name"/>
					</td>
				</tr>
				<tr>
					<th>
						<t:label for="place"/>
					</th>
					<td>
						<t:textfield t:id="place" value="account.place"/>
					</td>
				</tr>
				<tr>
					<th>${message:locale-label}</th>
					<td>
						<t:common.localeselect locale="account.locale"/>
					</td>
				</tr>
				<tr>
					<th>${message:timezone-label}</th>
					<td>
						<t:common.timezoneselect timeZone="account.timeZone"/>
					</td>
				</tr>
			</table>
			<p:changeMenuItem>
				<t:linksubmit event="changeInformation">${message:change-label}</t:linksubmit>
			</p:changeMenuItem>
		</c:panel>
	</t:form>
</c:container>

</html>
