<html t:type="layout/default"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
        >

<t:form class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-4">
            <t:game.raceselect value="race"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-4">
            <t:game.faceselect value="face"/>
        </div>
    </div>
    <div class="form-group">
        <t:label for="name" class="control-label col-sm-4"/>
        <div class="col-sm-6">
            <t:textfield t:id="name" class="form-control"
                         label="message:label.name"
                         value="name"
                         validate="required"
                    />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-4">
            <t:submit value="message:label.create" class="btn btn-default"/>

            <t:actionlink context="literal:cancel" class="btn btn-default">${message:label.cancel}</t:actionlink>
        </div>
    </div>
</t:form>

</html>
