<html t:type="layout/default"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">


<t:form t:id="changeEmailForm" class="form-horizontal">
    <legend>${message:label.change-email}</legend>

    <t:customerrors/>

    <div class="form-group">
        <t:label for="email" class="control-label col-sm-4"/>
        <div class="col-sm-6">
            <t:textfield t:id="email" class="form-control"
                         label="message:label.email"
                         value="email"
                         validate="required"
                    />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-4">
            <t:linksubmit class="btn btn-default">${message:label.change}</t:linksubmit>
        </div>
    </div>
</t:form>

<t:if test="hasEmail">
    <t:form t:id="changePasswordForm" class="form-horizontal">
        <legend>${message:label.change-password}</legend>

        <t:customerrors/>

        <div class="form-group">
            <t:label for="password" class="control-label col-sm-4"/>
            <div class="col-sm-6">
                <t:textfield t:id="password" class='form-control'
                             label="message:label.password"
                             value="password"
                             validate="required"
                        />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-4">
                <t:linksubmit class="btn btn-default">${message:label.change}</t:linksubmit>
            </div>
        </div>
    </t:form>
</t:if>

<t:form t:id="accountForm" class="form-horizontal">
    <legend>${message:label.change-profile}</legend>

    <div class="form-group">
        <t:label for="name" class="control-label col-sm-4"/>
        <div class="col-sm-6">
            <t:textfield t:id="name" class="form-control"
                         label="message:label.name"
                         value="value.name"
                    />
        </div>
    </div>
    <div class="form-group">
        <t:label for="location" class="control-label col-sm-4"/>
        <div class="col-sm-6">
            <t:textfield t:id="location" class="form-control"
                         label="message:label.location"
                         value="value.location"
                    />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-4">
            <t:linksubmit class="btn btn-default">${message:label.save}</t:linksubmit>
        </div>
    </div>
</t:form>

</html>
