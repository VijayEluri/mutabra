<html t:type="layout" title="player-home-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<t:game.herodisplay hero="hero" size="big"/>

<h1>${message:users-title}</h1>
<t:loop source="users" value="row">
	<t:eventlink event="createDuel" context="row.name">
		<t:game.herodisplay hero="row.hero" size="normal"/>
	</t:eventlink>
</t:loop>

</html>
