<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure id="ga" class="org.mortbay.jetty.webapp.WebAppContext">

	<New id="gadb" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>jdbc/nonamedb</Arg>
		<Arg>
			<New class="org.apache.commons.dbcp.BasicDataSource">
				<Set name="driverClassName">${jdbc.driver}</Set>
				<Set name="url">${jdbc.url}</Set>
				<Set name="username">${jdbc.username}</Set>
				<Set name="password">${jdbc.password}</Set>
				<Set name="maxActive">10</Set>
				<Set name="maxIdle">3</Set>
				<Set name="maxWait">10000</Set>

				<Call name="addConnectionProperty">
					<Arg>useUnicode</Arg>
					<Arg>true</Arg>
				</Call>

				<Call name="addConnectionProperty">
					<Arg>characterEncoding</Arg>
					<Arg>UTF-8</Arg>
				</Call>
			</New>
		</Arg>
	</New>

</Configure>
