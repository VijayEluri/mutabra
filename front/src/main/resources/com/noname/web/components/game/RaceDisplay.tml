<c:viewstack state="prop:size"
			 xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
			 xmlns:p="tapestry:parameter"
			 xmlns:c="tapestry-library:common">

	<p:big>
		<img src="${raceImage}" alt="${race:description}" title="${race:description}" width="100" height="100"/>
	</p:big>

	<p:normal>
		<img src="${raceImage}" alt="${race:description}" title="${race:description}" width="32" height="32"/>
	</p:normal>

</c:viewstack>
