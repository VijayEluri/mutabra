<html t:type="simplelayout" title="signUp-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<c:container align="center">
	<t:form t:id="signUpForm">
		<t:errors/>

		<c:panel actions="signUp,signIn" style="width: 300px;">
			<table class="details">
				<tr>
					<th>
						<t:label for="email"/>
					</th>
					<td>
						<t:textfield t:id="email" value="email" validate="required"/>
					</td>
				</tr>
			</table>
			<p:signUpMenuItem>
				<t:linksubmit event="signUp">${message:signUp-label}</t:linksubmit>
			</p:signUpMenuItem>
		</c:panel>
	</t:form>
</c:container>

</html>
