<html t:type="layout" title="cards-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<t:entitygrid source="dataSource" row="row" showIdColumn="true"
			  rowActions="view,edit,delete" actions="add">
	<c:gridcolumn property="code" width="100"/>
	<c:gridcolumn property="description">
		<div style="font-weight: bold;">${row:description}</div>
		<div>${message:type-label}: ${row.type}</div>
		<div>${message:level-label}: ${row.level:description}</div>
	</c:gridcolumn>
	<c:gridcolumn property="description">${row:description}</c:gridcolumn>
</t:entitygrid>

</html>
