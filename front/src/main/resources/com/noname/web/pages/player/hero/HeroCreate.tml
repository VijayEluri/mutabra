<html t:type="layout" title="hero-create-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<t:form t:id="createForm">
	<c:panel actions="create,cancel">
		<table class="details">
			<tr>
				<th>
					<t:label for="name"/>
				</th>
				<td>
					<t:textfield t:id="name" value="record.name" validate="required"/>
				</td>
			</tr>
			<tr>
				<th>${message:race-label}</th>
				<td>
					<t:game.raceselect race="record.race"/>
				</td>
			</tr>
			<tr>
				<th>${message:rating-label}</th>
				<td>${record.rating}</td>
			</tr>
			<tr>
				<th>${message:level-label}</th>
				<td>${record.level:description}</td>
			</tr>
			<tr>
				<th>${message:attack-label}</th>
				<td>${record.attack}</td>
			</tr>
			<tr>
				<th>${message:defence-label}</th>
				<td>${record.defence}</td>
			</tr>
		</table>
		<p:createMenuItem>
			<t:linksubmit event="create">${message:create-label}</t:linksubmit>
		</p:createMenuItem>
	</c:panel>
</t:form>

</html>
