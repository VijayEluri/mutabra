<html t:type="layout" title="home-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<div class="unit c-2">
	<div class="column">
		<img align="middle" src="${logo}" alt="logo"/>
	</div>

	<div class="column">
		<c:box>
			${message:content-text}
			<br/>
			<br/>
			<br/>
			<t:if test="!authenticated">
				<t:form t:id="signUpForm">

					<t:errors/>

					<table class="dialog">
						<tr>
							<td>
								<t:label for="email"/>
							</td>
						</tr>
						<tr>
							<td>
								<t:textfield t:id="email" value="email" validate="required"/>
							</td>
							<td>
								<t:linksubmit event="signUp">${message:signUp-label}</t:linksubmit>
							</td>
						</tr>
					</table>
				</t:form>
			</t:if>
		</c:box>

	</div>
</div>
</html>
