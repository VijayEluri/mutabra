<html t:type="layout" title="heroes-title"
	  xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	  xmlns:c="tapestry-library:common"
	  xmlns:p="tapestry:parameter">

<c:panel actions="create">
	<t:loop source="heroes" value="row">
		<t:game.herodisplay hero="row" size="big">
			<div class="column" style="float:right;">
				<c:menu context="prop:row" actions="enter,settings,delete"/>
			</div>
		</t:game.herodisplay>
	</t:loop>
</c:panel>

</html>
