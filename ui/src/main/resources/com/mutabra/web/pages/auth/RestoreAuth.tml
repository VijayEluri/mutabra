<html t:type="layout/auth"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

<t:form t:id="restoreForm" class="form-horizontal">
    <fieldset>
        <t:form.formerrors/>

        <t:form.formrow for="email" labelClass="col-sm-4" fieldClass="col-sm-6">
            <t:textfield t:id="email" class="form-control"
                         label="message:label.email"
                         placeholder="message:label.email"
                         value="email"
                         validate="required,email"
                    />
        </t:form.formrow>

        <t:form.formrow fieldClass="col-sm-6 col-sm-offset-4">
            <t:linksubmit class="btn btn-default">${message:button.restore}</t:linksubmit>
        </t:form.formrow>
    </fieldset>
</t:form>

</html>
