<html t:type="layout/empty"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div class="span6 offset3">
    <section id="content" class="wrapper-sm col-sm-9 col-md-7 col-lg-6">

        <ul class="nav nav-pills">
            <li class="active">
                <t:pagelink page="auth/signin">${message:tab.sign-in}</t:pagelink>
            </li>
            <li>
                <t:pagelink page="auth/signup">${message:tab.sign-up}</t:pagelink>
            </li>
            <li>
                <t:pagelink page="auth/restore">${message:tab.restore}</t:pagelink>
            </li>
        </ul>
        <hr/>

        <div class="pill-content">
            <t:form t:id="signInForm" class="form-horizontal">
                <fieldset>
                    <t:if test="errors">
                        <t:form.errors errors="errors"/>
                        <p:else>
                            <t:form.errors/>
                        </p:else>
                    </t:if>

                    <div class="form-group">
                        <t:label for="email" class="control-label col-sm-4"/>

                        <div class="col-sm-6">
                            <t:textfield t:id="email" class="form-control"
                                         label="message:label.email"
                                         placeholder="message:label.email"
                                         value="email"
                                         validate="required"
                                    />
                        </div>
                    </div>

                    <div class="form-group">
                        <t:label for="password" class="control-label col-sm-4"/>

                        <div class="col-sm-6">
                            <t:passwordfield t:id="password" class="form-control"
                                             label="message:label.password"
                                             placeholder="message:label.password"
                                             value="password"
                                    />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-4">
                            <t:menu.oauthmenu t:id="oauth">
                                <t:linksubmit class="btn btn-default">${message:button.sign-in}</t:linksubmit>
                            </t:menu.oauthmenu>
                        </div>
                    </div>
                </fieldset>
            </t:form>
        </div>
    </section>
</div>

</html>
