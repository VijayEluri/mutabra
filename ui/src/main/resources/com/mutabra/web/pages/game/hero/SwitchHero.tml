<html t:type="layout/default"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<t:form class="form-horizontal">
    <t:form.formerrors/>

    <div class="row">
        <div class="col-md-3">
            Parameters goes here
        </div>

        <div class="col-md-5">
            <t:hero.heroselect id="hero"
                               value="activeHero"
                               width="350" height="350"
                    />
        </div>

        <div class="col-md-4">
            <t:paginator t:id="paginator" source="source" value="hero" offline="true"
                         id="paginator-hero">
                <div class="${heroItemCssClass}" data-toggle="face" data-target="#hero" data-part="all" data-value="${heroItemValue}">
                    <t:hero.herofacedisplay appearance="hero.appearance"
                                            width="100" height="100"
                            />
                </div>

                <p:placeholder>
                    <div class="face disabled">
                        <svg xmlns="http://www.w3.org/2000/svg" height="100" width="100" version="1.1">
                        </svg>
                    </div>
                </p:placeholder>
            </t:paginator>
        </div>
    </div>

    <hr/>
    <div class="btn-toolbar">
        <t:submit value="message:button.enter" class="btn btn-default"/>
        <t:pagelink page="game/hero/createhero" class="btn btn-default">${message:button.create}</t:pagelink>
    </div>

</t:form>

</html>
