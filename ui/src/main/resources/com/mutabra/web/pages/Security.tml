<html t:type="layout/empty"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div class="span6 offset3">
    <section id="content" class="wrapper-sm col-sm-9 col-md-7 col-lg-6">
        <ul class="nav nav-pills">
            <li class="active">
                <a data-toggle="pill" href="#pills_signIn">Sign In</a>
            </li>
            <li>
                <a data-toggle="pill" href="#pills_signUp">Sign Up</a>
            </li>
            <li>
                <a data-toggle="pill" href="#pills_restore">Restore</a>
            </li>
        </ul>
        <hr/>

        <div class="pill-content">
            <div id="pills_signIn" class="pill-pane active">
                <t:form t:id="signInForm" class="form-horizontal">
                    <fieldset>
                        <t:form.errors/>
                        <div class="form-group">
                            <t:label for="email" class="control-label col-sm-4"/>

                            <div class="col-sm-6">
                                <t:textfield t:id="email" class="form-control"
                                             label="message:label.email"
                                             placeholder="message:label.email"
                                             value="email"
                                             validate="required"
                                        />
                            </div>
                        </div>

                        <div class="form-group">
                            <t:label for="password" class="control-label col-sm-4"/>

                            <div class="col-sm-6">
                                <t:passwordfield t:id="password" class="form-control"
                                                 label="message:label.password"
                                                 placeholder="message:label.password"
                                                 value="password"
                                        />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-4">
                                <t:menu.oauthmenu t:id="oauth">
                                    <t:linksubmit class="btn btn-default">${message:label.sign-in}</t:linksubmit>
                                </t:menu.oauthmenu>
                            </div>
                        </div>
                    </fieldset>
                </t:form>
            </div>
            <div id="pills_signUp" class="pill-pane">
                <t:form t:id="signUpForm" class="form-horizontal">
                    <fieldset>
                        <t:form.errors/>
                        <div class="form-group">
                            <t:label for="signUpEmail" class="control-label col-sm-4"/>
                            <div class="col-sm-6">
                                <t:textfield t:id="signUpEmail" class="form-control"
                                             label="message:label.email"
                                             placeholder="message:label.email"
                                             value="email"
                                             validate="required,email"
                                        />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-4">
                                <t:menu.oauthmenu>
                                    <t:linksubmit class="btn btn-default">${message:label.sign-up}</t:linksubmit>
                                </t:menu.oauthmenu>
                            </div>
                        </div>
                    </fieldset>
                </t:form>
            </div>
            <div id="pills_restore" class="pill-pane">
                <t:form t:id="restoreForm" class="form-horizontal">
                    <fieldset>
                        <t:form.errors/>
                        <div class="form-group">
                            <t:label for="restoreEmail" class="control-label col-sm-4"/>
                            <div class="col-sm-6">
                                <t:textfield t:id="restoreEmail" class="form-control"
                                             label="message:label.email"
                                             placeholder="message:label.email"
                                             value="email"
                                             validate="required,email"
                                        />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-4">
                                <t:linksubmit class="btn btn-default">${message:label.restore}</t:linksubmit>
                            </div>
                        </div>
                    </fieldset>
                </t:form>
            </div>
        </div>
    </section>

</div>
</html>
