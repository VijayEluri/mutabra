<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.mutabra" level="debug"/>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>