<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

	<changeSet id="00" author="ikhalopik@gmail.com" context="schema">
		<addColumn tableName="ACCOUNT">
			<column name="NAME" type="VARCHAR(100)">
				<constraints nullable="true"/>
			</column>
		</addColumn>
		<addColumn tableName="ACCOUNT">
			<column name="PLACE" type="VARCHAR(100)">
				<constraints nullable="true"/>
			</column>
		</addColumn>
		<addColumn tableName="ACCOUNT">
			<column name="LOCALE" type="VARCHAR(10)">
				<constraints nullable="true"/>
			</column>
		</addColumn>
		<addColumn tableName="ACCOUNT">
			<column name="TIMEZONE" type="VARCHAR(20)">
				<constraints nullable="true"/>
			</column>
		</addColumn>
		<addColumn tableName="ACCOUNT">
			<column name="DELETED_AT" type="DATE">
				<constraints nullable="true"/>
			</column>
		</addColumn>

		<rollback>
			<dropColumn tableName="ACCOUNT" columnName="NAME"/>
			<dropColumn tableName="ACCOUNT" columnName="PLACE"/>
			<dropColumn tableName="ACCOUNT" columnName="LOCALE"/>
			<dropColumn tableName="ACCOUNT" columnName="TIMEZONE"/>
			<dropColumn tableName="ACCOUNT" columnName="DELETED_AT"/>
		</rollback>
	</changeSet>

	<changeSet id="01" author="ikhalopik@gmail.com" context="init">
		<insert tableName="ROLE">
			<column name="CODE" value="PENDING"/>
		</insert>

		<rollback>
			<delete tableName="ROLE">
				<where>CODE='PENDING'</where>
			</delete>
		</rollback>
	</changeSet>

	<changeSet id="02" author="ikhalopik@gmail.com" context="init">
		<insert tableName="LEVEL">
			<column name="CODE" value="NEWBIE"/>
			<column name="RATING" valueNumeric="0"/>
		</insert>

		<rollback>
			<delete tableName="LEVEL">
				<where>CODE='NEWBIE'</where>
			</delete>
		</rollback>
	</changeSet>

	<changeSet id="03" author="ikhalopik@gmail.com" context="init">
		<delete tableName="TRANSLATION"/>

		<insert tableName="TRANSLATION">
			<column name="BASENAME" value="ROLE"/>
			<column name="CODE" value="ADMIN"/>
			<column name="VARIANT" value="description"/>
			<column name="LOCALE" value=""/>
			<column name="VALUE" value="Administrator"/>
		</insert>

		<insert tableName="TRANSLATION">
			<column name="BASENAME" value="ROLE"/>
			<column name="CODE" value="USER"/>
			<column name="VARIANT" value="description"/>
			<column name="LOCALE" value=""/>
			<column name="VALUE" value="User"/>
		</insert>

		<insert tableName="TRANSLATION">
			<column name="BASENAME" value="ROLE"/>
			<column name="CODE" value="PENDING"/>
			<column name="VARIANT" value="description"/>
			<column name="LOCALE" value=""/>
			<column name="VALUE" value="Pending"/>
		</insert>

		<insert tableName="TRANSLATION">
			<column name="BASENAME" value="LEVEL"/>
			<column name="CODE" value="NEWBIE"/>
			<column name="VARIANT" value="description"/>
			<column name="LOCALE" value=""/>
			<column name="VALUE" value="Newbie"/>
		</insert>

		<rollback>
			<delete tableName="TRANSLATION"/>
		</rollback>
	</changeSet>

</databaseChangeLog>